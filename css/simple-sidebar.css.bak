/*stats*/
.rstable table {
	border-collapse: collapse;
	min-width:100%;
}

.rstable th{
	background-color: #000000;
	color: #ffffff;
	font-weight:800;
	text-align: center;
	vertical-align:middle;
}

.tablebkg{
	background-color: rgba(29,29,64,0.3);
}

.rstable tbody td {
    height:25px;
	vertical-align:middle;
	border-right: solid 2px #000000; 
	border-left: solid 2px #000000;
	color: #ffffff;
}

.rstable tbody tr:hover td{
    background-color: #ADD8E6;
	color: #000000;
}

