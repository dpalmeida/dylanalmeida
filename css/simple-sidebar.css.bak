/* References */
#referencelinks .container {
  position: relative;
  /* width: 100%; */
  height: 100px;
  margin-left: 0px;
  margin-right: 0px;
  background-color: rgba(48,78,111, 0.8);
}

#referencelinks .image {
  display: block;
  width: 100%;
  height: auto;
}

#referencelinks .overlay {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100%;
  width: 100%;
  opacity: 0;
  transition: .5s ease;
  background-color: #000000;
}

#referencelinks .container:hover .overlay {
  opacity: 0.3;
}

#referencelinks .text {
  color: white;
  font-size: 20px;
  position: absolute;
  text-align: center;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
}

